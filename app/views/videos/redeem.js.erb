alert("<%= @msg %>"); 

<% flash.each  do |k, v| %>
    notice = $("<div></div>")
    notice.append('<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>');
    notice.attr("class", "alert alert-<%= k %>").append("<%= v %>");
    $(".top_alert").append(notice)
<% end %>

$("#user_reward").html("<%= escape_javascript(current_user.reward.to_s) %>");
$("#redeem_<%= @video.id %>").html("<%= escape_javascript(video_redeem_status(@video)) %>");